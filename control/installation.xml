<?xml version="1.0"?>
<productDefines xmlns="http://www.suse.com/1.0/yast2ns" xmlns:config="http://www.suse.com/1.0/configns">

<!--
Work around for the text domain
textdomain="control"
-->

    <textdomain>control</textdomain>
    <texts>
      <ha_role>
        <!-- TRANSLATORS: a label for a system role -->
        <label>HA node</label>
      </ha_role>
      <ha_role_description>
          <label>• HA pattern installed
• sshd / NTP enable</label>
      </ha_role_description>
      <geo_role>
        <!-- TRANSLATORS: a label for a system role -->
        <label>HA GEO node</label>
      </geo_role>
      <geo_role_description>
        <label>• HA GEO pattern installed
• sshd / NTP enable</label>
      </geo_role_description>
    </texts>
    <update>
      <system_roles>
        <insert_system_roles config:type="list">
          <insert_system_role>
            <!-- FATE#317481 -->
            <system_roles config:type="list">
              <system_role>
                <id>ha_role</id>
		<order config:type="integer">500</order>
		<globals>
		  <enable_firewall config:type="boolean">true</enable_firewall>
		  <enable_sshd config:type="boolean">true</enable_sshd>
		  <firewall_enable_ssh config:type="boolean">false</firewall_enable_ssh>
		  <default_ntp_setup config:type="boolean">true</default_ntp_setup>
		</globals>
                <partitioning>
                  <try_separate_home config:type="boolean">false</try_separate_home>
                </partitioning>
                <software>
                  <default_patterns>minimal_base ha_sles</default_patterns>
                  <optional_default_patterns><![CDATA[]]></optional_default_patterns>
                </software>
              </system_role>
              <system_role>
                <id>geo_role</id>
		<order config:type="integer">510</order>
		<globals>
		  <enable_firewall config:type="boolean">true</enable_firewall>
		  <enable_sshd config:type="boolean">true</enable_sshd>
		  <firewall_enable_ssh config:type="boolean">false</firewall_enable_ssh>
		  <default_ntp_setup config:type="boolean">true</default_ntp_setup>
		</globals>
		<partitioning>
                  <try_separate_home config:type="boolean">false</try_separate_home>
                </partitioning>
                <software>
                  <default_patterns>minimal_base ha_sles ha_geo</default_patterns>
                  <optional_default_patterns><![CDATA[]]></optional_default_patterns>
                </software>
              </system_role>
            </system_roles>
          </insert_system_role>
        </insert_system_roles>
      </system_roles>
    </update>
</productDefines>
